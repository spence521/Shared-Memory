<Window x:Class="Display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Display"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="30,0,0,0">
        <TextBox Margin="0,30,0,30" Width="200" Height="18" HorizontalAlignment="Left" FontFamily="Times New Roman" Name="TextString"/>
        <Button  Margin="0,0,0,0" Width="200" Height="20" HorizontalAlignment="Left" Content="Send" FontFamily="Times New Roman" Click="Send"/>
    </StackPanel>
</Window>
